{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "instruments",
  "type": "object",
  "uniqueItems": true,
  "additionalProperties" : {
    "title": "instrument",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for an instrument",
        "type": "integer",
        "minimum": 0
      },
      "name": {
        "description": "The name of an instrument",
        "type": "string"
      }
    },
    "required": ["id", "name"]
  }
}