{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "blocks",
  "type": "object",
  "uniqueItems": true,
  "patternProperties" : {
    "^[0-9]+$": {
      "title": "block",
      "type": "object",
      "properties": {
        "id": {
          "description": "The unique identifier for a block",
          "type": "integer",
          "minimum": 0
        },
        "displayName": {
          "description": "The display name of a block",
          "type": "string"
        },
        "name": {
          "description": "The name of a block",
          "type": "string",
          "pattern": "\\S+"
        },
        "hardness": {
          "description": "Hardness of a block",
          "type": [
            "number",
            "null"
          ],
          "minimum": 0
        },
        "stackSize": {
          "description": "Stack size for a block",
          "type": "integer",
          "minimum": 0
        },
        "diggable": {
          "description": "true if a block is diggable",
          "type": "boolean"
        },
        "boundingBox": {
          "description": "BoundingBox of a block",
          "type": "string",
          "pattern": "^block|empty$"
        },
        "material": {
          "description": "Material of a block",
          "type": "string"
        },
        "harvestTools": {
          "description": "Tools that can harvest a block",
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {"type": "boolean"}
          }
        }
      },
      "required": [
        "id",
        "displayName",
        "name",
        "hardness",
        "stackSize",
        "diggable",
        "boundingBox"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}